<h1>Welcome @ViewBag.Name</h1>
<!DOCTYPE html>
<html>
<head>
    <title>Pokedex Search</title>
    <style>
        body { font-family: sans-serif; text-align: center; background-color: #f0f0f0; padding: 50px; }
        
        .pokedex-card {
            background: white;
            border: 4px solid #ce372b; /* Pokedex Red */
            border-radius: 15px;
            width: 300px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 5px 5px 15px rgba(0,0,0,0.2);
            display: none;
        }

        input { padding: 10px; font-size: 16px; border-radius: 5px; border: 1px solid #ddd; }
        button { padding: 10px 20px; font-size: 16px; background-color: #ce372b; color: white; border: none; border-radius: 5px; cursor: pointer; }
        button:hover { background-color: #a12b21; }
        
        img { width: 150px; height: 150px; image-rendering: pixelated; }
        .stats { text-align: left; margin-top: 15px; }
    </style>
</head>
<body>

    <h1>Simple Pokedex</h1>
    
    <div>
        <input type="text" id="pokeInput" placeholder="Enter Pokemon Name:">
        <button onclick="searchPokemon()">Search</button>
    </div>

    <div id="resultCard" class="pokedex-card">
        <h2 id="pName" style="text-transform: capitalize;"></h2>
        <img id="pImage" src="" alt="Pokemon Sprite" />
        <div class="stats">
            <p><strong>ID:</strong> <span id="pId"></span></p>
            <p><strong>Height:</strong> <span id="pHeight"></span></p>
            <p><strong>Weight:</strong> <span id="pWeight"></span></p>
        </div>
    </div>

    <script>
        async function searchPokemon() {
            const name = document.getElementById('pokeInput').value;
            const card = document.getElementById('resultCard');
            
            if (!name) return alert("Please enter a name");

            try {
                const response = await fetch(`https://pokeapi.co/api/v2/pokemon/${name}`);

                if (!response.ok) {
                    alert("Pokemon not found!");
                    card.style.display = 'none';
                    return;
                }

                const data = await response.json();

                // Update the HTML elements with data from C#
                document.getElementById('pName').innerText = data.name;
                document.getElementById('pId').innerText = data.id;
                document.getElementById('pHeight').innerText = data.height;
                document.getElementById('pWeight').innerText = data.weight;
                document.getElementById('pImage').src = data.sprites.front_default;

                // Show the card
                card.style.display = 'block';

            } catch (error) {
                console.error("Error:", error);
                alert("Something went wrong!");
            }
        }
    </script>
</body>
</html>